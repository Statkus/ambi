with Aws.Session;

package Song.Item is

   type T_Item is tagged private;

   type T_Item_Id is mod 2**32;

   -------------------------------------------------------------------------------------------------
   -- Initialize
   -------------------------------------------------------------------------------------------------
   function Initialize
     (Id        : in T_Item_Id;
      Item_Song : in T_Song;
      Client_Id : in Aws.Session.Id;
      Up_Votes  : in Natural := Natural'First) return T_Item;

   -------------------------------------------------------------------------------------------------
   -- Equality operator
   -------------------------------------------------------------------------------------------------
   function "=" (Left, Right : in T_Item) return Boolean;

   -------------------------------------------------------------------------------------------------
   -- Get_Id
   -------------------------------------------------------------------------------------------------
   function Get_Id (This : in T_Item) return T_Item_Id;

   -------------------------------------------------------------------------------------------------
   -- Get_Song
   -------------------------------------------------------------------------------------------------
   function Get_Song (This : in T_Item) return T_Song;

   -------------------------------------------------------------------------------------------------
   -- Get_Client_Id
   -------------------------------------------------------------------------------------------------
   function Get_Client_Id (This : in T_Item) return Aws.Session.Id;

   -------------------------------------------------------------------------------------------------
   -- Get_Up_Votes
   -------------------------------------------------------------------------------------------------
   function Get_Up_Votes (This : in T_Item) return Natural;

   -------------------------------------------------------------------------------------------------
   -- Up_Vote
   -------------------------------------------------------------------------------------------------
   procedure Up_Vote (This : in out T_Item);

   -------------------------------------------------------------------------------------------------
   -- Next
   -------------------------------------------------------------------------------------------------
   procedure Next (Item_Id : in out T_Item_Id);

private

   type T_Item is tagged record
      Id        : T_Item_Id;
      Item_Song : T_Song;
      Client_Id : Aws.Session.Id;
      Up_Votes  : Natural := Natural'First;
   end record;

end Song.Item;
