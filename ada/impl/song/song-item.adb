package body Song.Item is

   -------------------------------------------------------------------------------------------------
   -- Initialize
   -------------------------------------------------------------------------------------------------
   function Initialize
     (Id        : in T_Item_Id;
      Item_Song : in T_Song;
      Client_Id : in Aws.Session.Id;
      Up_Votes  : in Natural := Natural'First) return T_Item is
     ((Id => Id, Item_Song => Item_Song, Client_Id => Client_Id, Up_Votes => Up_Votes));

   -------------------------------------------------------------------------------------------------
   -- Equality operator
   -------------------------------------------------------------------------------------------------
   function "=" (Left, Right : in T_Item) return Boolean is (Left.Id = Right.Id);

   -------------------------------------------------------------------------------------------------
   -- Get_Song
   -------------------------------------------------------------------------------------------------
   function Get_Song (This : in T_Item) return T_Song is (This.Item_Song);

   -------------------------------------------------------------------------------------------------
   -- Get_Id
   -------------------------------------------------------------------------------------------------
   function Get_Id (This : in T_Item) return T_Item_Id is (This.Id);

   -------------------------------------------------------------------------------------------------
   -- Get_Client_Id
   -------------------------------------------------------------------------------------------------
   function Get_Client_Id (This : in T_Item) return Aws.Session.Id is (This.Client_Id);

   -------------------------------------------------------------------------------------------------
   -- Get_Up_Votes
   -------------------------------------------------------------------------------------------------
   function Get_Up_Votes (This : in T_Item) return Natural is (This.Up_Votes);

   -------------------------------------------------------------------------------------------------
   -- Up_Vote
   -------------------------------------------------------------------------------------------------
   procedure Up_Vote (This : in out T_Item) is
   begin
      This.Up_Votes := This.Up_Votes + 1;
   end Up_Vote;

   -------------------------------------------------------------------------------------------------
   -- Next
   -------------------------------------------------------------------------------------------------
   procedure Next (Item_Id : in out T_Item_Id) is
   begin
      Item_Id := Item_Id + 1;
   end Next;

end Song.Item;
