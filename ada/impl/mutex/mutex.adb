package body Mutex is

   protected body T_Mutex is

      ----------------------------------------------------------------------------------------------
      -- Lock
      ----------------------------------------------------------------------------------------------
      entry Lock when not Locked is
      begin
         Locked := True;
      end Lock;

      ----------------------------------------------------------------------------------------------
      -- Unlock
      ----------------------------------------------------------------------------------------------
      procedure Unlock is
      begin
         Locked := False;
      end Unlock;

   end T_Mutex;

end Mutex;
