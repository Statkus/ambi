with Ada.Containers.Vectors;

package Song.Item.List is

   package Item_Vectors is new Ada.Containers.Vectors (Natural, T_Item);

   protected type T_Item_List is

      ----------------------------------------------------------------------------------------------
      -- Set
      ----------------------------------------------------------------------------------------------
      procedure Set (Item_Vector : in Item_Vectors.Vector);

      ----------------------------------------------------------------------------------------------
      -- Append
      ----------------------------------------------------------------------------------------------
      procedure Append (New_Item : in T_Item);

      ----------------------------------------------------------------------------------------------
      -- Delete_First
      ----------------------------------------------------------------------------------------------
      procedure Delete_First;

      ----------------------------------------------------------------------------------------------
      -- Delete
      ----------------------------------------------------------------------------------------------
      procedure Delete (Item_Id : in T_Item_Id);

      ----------------------------------------------------------------------------------------------
      -- Up_Vote
      ----------------------------------------------------------------------------------------------
      procedure Up_Vote (Item_Id : in T_Item_Id);

      ----------------------------------------------------------------------------------------------
      -- Get
      ----------------------------------------------------------------------------------------------
      function Get return Item_Vectors.Vector;

      ----------------------------------------------------------------------------------------------
      -- Iterate
      ----------------------------------------------------------------------------------------------
      procedure Iterate (Process : not null access procedure (Element : in T_Item));

      ----------------------------------------------------------------------------------------------
      -- First_Element
      ----------------------------------------------------------------------------------------------
      function First_Element return T_Item;

      ----------------------------------------------------------------------------------------------
      -- Is_Empty
      ----------------------------------------------------------------------------------------------
      function Is_Empty return Boolean;

   private

      Item_List : Item_Vectors.Vector := Item_Vectors.Empty_Vector;

   end T_Item_List;

   -------------------------------------------------------------------------------------------------
   -- Initialize
   -------------------------------------------------------------------------------------------------
   function Initialize return T_Item_List;

end Song.Item.List;
